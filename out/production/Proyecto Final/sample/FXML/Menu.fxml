<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import javafx.scene.control.Button?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import de.jensd.fx.glyphs.materialdesignicons.MaterialDesignIconView?>
<?import de.jensd.fx.glyphs.materialicons.MaterialIconView?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            prefHeight="400.0" prefWidth="600.0">
    <Button fx:id="btnServHogar" text="Servicios del Hogar" contentDisplay="TOP" AnchorPane.topAnchor="250" AnchorPane.rightAnchor="250">         <!--- Boton Pago de Servicio domestico -->
        <graphic>
            <MaterialIconView glyphName="LIVE_TV" glyphSize="200" fill= "azure"/>
        </graphic>
    </Button>

    <Button fx:id="btnRecargas" text="Recargas" contentDisplay="TOP" AnchorPane.topAnchor="250" AnchorPane.leftAnchor="250">         <!--- Boton Pago de Servicio Recargas -->
        <graphic>
            <MaterialIconView glyphName="CONTACT_PHONE" glyphSize="200" fill= "azure"/>
        </graphic>
    </Button>

    <Button fx:id="btnPagos" text="Pago en linea" contentDisplay="TOP" prefWidth="220" AnchorPane.topAnchor="250" AnchorPane.leftAnchor="580">         <!--- Boton Pago de Servicio Recargas -->
        <graphic>
            <FontAwesomeIconView glyphName="DOLLAR" glyphSize="200" fill= "azure"/>
        </graphic>
    </Button>

    <Button fx:id="btnCerrarSesion" text="Cerrar sesion" contentDisplay="RIGHT" AnchorPane.topAnchor="650" AnchorPane.rightAnchor="0">         <!--- Boton Pago de Servicio Recargas -->
        <graphic>
            <FontAwesomeIconView glyphName="SIGN_OUT" glyphSize="40" fill= "azure"/>
        </graphic>
    </Button>

</AnchorPane>
