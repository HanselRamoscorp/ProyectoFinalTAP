<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import de.jensd.fx.glyphs.materialicons.MaterialIconView?>
<?import javafx.scene.Group?>
<?import javafx.scene.image.ImageView?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            prefHeight="400.0" prefWidth="600.0">
    <Button fx:id="btnRegresar" prefHeight="30" AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0">         <!--- Boton Pago de Servicio domestico -->
        <graphic>
            <MaterialIconView glyphName="KEYBOARD_ARROW_LEFT" glyphSize="15" fill="azure"/>
        </graphic>
    </Button>
    <ComboBox fx:id="cmbTypeCompany" style="-fx-font-size: 20" prefWidth="500" prefHeight="40" AnchorPane.leftAnchor="80" AnchorPane.topAnchor="10"/>
    <StackPane fx:id="stPane" prefWidth="460" prefHeight="320" AnchorPane.rightAnchor="40" AnchorPane.topAnchor="200">
        <Group StackPane.alignment="CENTER">
            <ImageView fx:id="lblImagen" AnchorPane.leftAnchor="0" fitWidth="460" fitHeight="320" AnchorPane.topAnchor="0"/>
        </Group>
    </StackPane>

    <!-- Agregar Compañia -->
    <TextField fx:id="textNombreCompany" text="Nombre Compañia" style="-fx-font-size: 20" prefWidth="500" AnchorPane.leftAnchor="40" AnchorPane.topAnchor="100"/>
    <ComboBox fx:id="cmbCommission"                             style="-fx-font-size: 20" prefWidth="500" AnchorPane.leftAnchor="40" AnchorPane.topAnchor="150"/>
    <!-- Agregar Planes -->
    <ComboBox fx:id="cmbPlanes"                                style="-fx-font-size: 20" prefWidth="500" AnchorPane.leftAnchor="550" AnchorPane.topAnchor="100"/>
    <ComboBox fx:id="cmbTypeHS"                                style="-fx-font-size: 20" prefWidth="500" AnchorPane.leftAnchor="550" AnchorPane.topAnchor="150"/>
    <!-- Agregar Recargas -->
    <TextField fx:id="textCantPlan" text="Numero de planes"     style="-fx-font-size: 20" prefWidth="500" AnchorPane.leftAnchor="40" AnchorPane.topAnchor="400"/>
    <ComboBox fx:id="cmbQuantity"                               style="-fx-font-size: 20" prefWidth="500" AnchorPane.leftAnchor="40" AnchorPane.topAnchor="450"/>

    <Button fx:id="btnCargar" text="Seleccionar imagen"         style="-fx-font-size: 20" prefWidth="500" AnchorPane.rightAnchor="40" AnchorPane.topAnchor="500"/>
    <Button fx:id="btnGuardar" text="Guardar"                   style="-fx-font-size: 20" prefWidth="500" AnchorPane.leftAnchor="40" AnchorPane.topAnchor="500"/>
</AnchorPane>
