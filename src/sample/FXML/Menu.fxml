<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import javafx.scene.control.Button?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import de.jensd.fx.glyphs.materialdesignicons.MaterialDesignIconView?>
<?import de.jensd.fx.glyphs.materialicons.MaterialIconView?>
<GridPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            prefHeight="400.0" prefWidth="600.0"
            alignment="CENTER"
            vgap="40">
    <Button fx:id="btnServHogar" text="Servicios del Hogar" contentDisplay="TOP" GridPane.columnIndex="1" GridPane.rowIndex="1">         <!--- Boton Pago de Servicio domestico -->
        <graphic>
            <MaterialIconView glyphName="LIVE_TV" glyphSize="200" fill= "azure"/>
        </graphic>
    </Button>

    <Button fx:id="btnbus" text="Boleto de Autobus" contentDisplay="TOP"  GridPane.columnIndex="2" GridPane.rowIndex="1">         <!--- Boton Pago de Servicio domestico -->
        <graphic>
            <FontAwesomeIconView glyphName="BUS" glyphSize="200" fill= "azure"/>
        </graphic>
    </Button>


    <Button fx:id="btnRecargas" text="Recargas" contentDisplay="TOP"  GridPane.columnIndex="3" GridPane.rowIndex="1">         <!--- Boton Pago de Servicio Recargas -->
        <graphic>
            <MaterialIconView glyphName="CONTACT_PHONE" glyphSize="200" fill= "azure"/>
        </graphic>
    </Button>

    <Button fx:id="btnPagos" text="Pago en linea" contentDisplay="TOP" prefWidth="220"  GridPane.columnIndex="4" GridPane.rowIndex="1">         <!--- Boton Pago de Servicio Recargas -->
        <graphic>
            <FontAwesomeIconView glyphName="DOLLAR" glyphSize="200" fill= "azure"/>
        </graphic>
    </Button>



    <Button fx:id="btnCerrarSesion" text="Cerrar sesion" contentDisplay="RIGHT" AnchorPane.topAnchor="650" AnchorPane.rightAnchor="0">         <!--- Boton Pago de Servicio Recargas -->
        <graphic>
            <FontAwesomeIconView glyphName="SIGN_OUT" glyphSize="40" fill= "azure"/>
        </graphic>
    </Button>

    <Button fx:id="btnModificar" text="Modificar Servicios" contentDisplay="LEFT"  GridPane.columnIndex="0" GridPane.rowIndex="2" GridPane.columnSpan="4">         <!--- Boton Modificar servicios -->
        <graphic>
            <FontAwesomeIconView glyphName="EDIT" glyphSize="50" strokeWidth="150" fill= "azure"/>
        </graphic>
    </Button>

</GridPane>
